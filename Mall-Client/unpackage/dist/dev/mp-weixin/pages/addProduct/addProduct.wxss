.addProduct .example {
  padding: 15px;
  height: 100vh;
  background-color: #fff;
}
.addProduct .example .vue-ref {
  width: 100rpx;
  height: 100rpx;
}
.addProduct .segmented-control {
  margin-bottom: 15px;
}
.addProduct .button-group {
  margin-top: 15px;
  display: flex;
  justify-content: space-around;
}
.addProduct .form-item {
  display: flex;
  align-items: center;
}
.addProduct .button {
  display: flex;
  align-items: center;
  height: 35px;
  margin-left: 10px;
}
.order_pay_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(90deg, #FF740B, #FE6227);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 20px;
  margin: 10rpx;
}

