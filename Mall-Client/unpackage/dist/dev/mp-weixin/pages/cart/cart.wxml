<view style="background-color:#F5F5F5;"><view class="recevie_address_row"><block wx:if="{{!address}}"><view class="address_btn"><button type="warn" plain="{{true}}" data-event-opts="{{[['tap',[['handleChooseAddress',['$event']]]]]}}" bindtap="__e">获取收货地址</button></view></block><block wx:else><view class="user_info_row"><view class="user_info"><view>{{"收货人："+address.userName+","+address.telNumber}}</view><view>{{address.provinceName+address.cityName+address.countyName+address.detailInfo}}</view></view><view class="change_address_btn"><button size="mini" plain="{{true}}">更换地址</button></view></view></block></view><view class="cart_content"><view class="cart_main"><block wx:for="{{cart}}" wx:for-item="item" wx:for-index="__i0__" wx:key="id"><view class="cart_item"><view class="cart_chk_wrap"><checkbox-group data-id="{{item.id}}" data-event-opts="{{[['change',[['handleItemChange',['$event']]]]]}}" bindchange="__e"><checkbox checked="{{item.checked}}"></checkbox></checkbox-group></view><navigator class="cart_img_wrap" url="{{'/pages/product_detail/product_detail?id='+item.id}}"><image mode="widthFix" src="{{apiBaseUrl+'/image/product/'+item.proPic}}"></image></navigator><view class="cart_info_wrap"><navigator url="{{'/pages/product_detail/product_detail?id='+item.id}}"><view class="goods_name">{{item.name}}</view></navigator><view class="goods_price_wrap"><view class="goods_price">{{'¥'+item.price+''}}</view><view class="cart_num_tool"><view class="num_edit" data-id="{{item.id}}" data-operation="{{-1}}" data-event-opts="{{[['tap',[['handleItemNumEdit',['$event']]]]]}}" bindtap="__e">-</view><view class="goods_num">{{item.num}}</view><view class="num_edit" data-id="{{item.id}}" data-operation="{{1}}" data-event-opts="{{[['tap',[['handleItemNumEdit',['$event']]]]]}}" bindtap="__e">+</view></view></view></view></view></block></view></view><block wx:if="{{cart.length==0}}"><block><view class="iconfont icon-gouwuchekong" style="font-size:200rpx;color:gray;text-align:center;pad